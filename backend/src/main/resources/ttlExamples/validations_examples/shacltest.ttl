@prefix sh:http://www.w3.org/ns/shacl .
@prefix ex:http://example.org/ns .
@prefix xsd:http://www.w3.org/2001/XMLSchema .

ex:PersonShape
  a sh:NodeShape ;
  sh:targetClass ex:Person ;

  sh:property [
    sh:path ex:age ;
    sh:datatype xsd:integer ;
    sh:minInclusive 0 ;
    sh:maxInclusive 150 ;
    sh:message "Age must be between 0 and 150." ;
  ] .